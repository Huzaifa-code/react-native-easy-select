{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es5",
      "lib": ["dom", "es6"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react",
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  